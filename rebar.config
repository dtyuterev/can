%% -*- erlang -*-
%% Config file for can-application

{deps, [{dthread, ".*", {git, "https://github.com/dtyuterev/dthread.git"}},
	{uart, ".*", {git, "https://github.com/tonyrog/uart.git"}},
	{lager, "3.2.2", {git, "https://github.com/tonyrog/lager.git", 
			 {tag, "3.2.2"}}}
       ]}.
{erl_opts, [debug_info, fail_on_warning, {parse_transform, lager_transform}]}.
{sub_dirs, ["src"]}.
{port_env, [
	    {"CFLAGS", "$CFLAGS -DDEBUG_MEM -DDLOG_DEFAULT=DLOG_NONE -D_THREAD_SAFE -I _build/default/lib"},
	    {"(linux)", "LDFLAGS", "$LDFLAGS _build/default/lib/dthread/c_src/dlog.o _build/default/lib/dthread/c_src/dlib.o _build/default/lib/dthread/c_src/dterm.o _build/default/lib/dthread/c_src/dthread.o"}
	   ]}.
{port_specs, [
	      {"linux","priv/can_sock_drv.so",["c_src/*.c"]}
	     ]}.

{plugins, [pc]}.
{provider_hooks,
 [
  {pre,
   [
    {compile, {pc, compile}},
    {clean, {pc, clean}}
   ]
  }
 ]
}.
